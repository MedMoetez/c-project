@model List<AppelsDOffresApp.ViewModels.ManageUserRolesViewModel>

<h2>Manage User Role</h2>

<form asp-action="ManageUserRole" method="post">
    <input type="hidden" name="userId" value="@ViewBag.userId" />
    <div class="form-group">
        @foreach (var role in Model)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="roles" value="@role.RoleName" @(role.Selected ? "checked" : "") />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
