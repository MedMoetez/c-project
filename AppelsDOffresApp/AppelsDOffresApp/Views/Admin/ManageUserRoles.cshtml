@model List<AppelsDOffresApp.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>Manage User Roles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.Roles != null && user.Roles.Count > 0)
                    {
                        foreach (var role in user.Roles)
                        {
                            <span>@role</span>

                            <br />
                        }
                    }
                    else
                    {
                        <span>No roles assigned</span>
                    }
                </td>
                <td>
                    <a class="btn btn-secondary" asp-action="ManageUserRole" asp-route-userId="@user.UserId">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
