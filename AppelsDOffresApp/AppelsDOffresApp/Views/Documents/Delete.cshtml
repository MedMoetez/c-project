@model AppelsDOffresApp.Models.Documents

@{
    ViewData["Title"] = "Delete Document";
}

<h1>Delete Document</h1>

<h3>Are you sure you want to delete this document?</h3>
<div>
    <h4>@Model.Nom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            File Path
        </dt>
        <dd class="col-sm-10">
            @Model.FilePath
        </dd>
        <dt class="col-sm-2">
            Appel d'Offre
        </dt>
        <dd class="col-sm-10">
            @Model.AppelOffre.Nom
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
