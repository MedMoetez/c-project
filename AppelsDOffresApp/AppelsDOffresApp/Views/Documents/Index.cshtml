@model IEnumerable<AppelsDOffresApp.Models.Documents>

@{
    ViewData["Title"] = "Documents";
}

<h1>Documents</h1>

<p>
    <a asp-action="AddToAppelOffre" class="btn btn-primary">Add Document to Appel Offre</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Type</th>
            <th>Appel Offre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nom</td>
                <td>@item.Type</td>
                <td>@item.AppelOffre.Nom</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
